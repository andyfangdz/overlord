        "style.css": {
            "mapping": "style",
            "initialCode": "body {\nbackground-color: white;\n}",
            "cmOption": {
                "lineNumbers": true,
                "mode": "text/css",
                "theme": "cc",
                "lineWrapping": true,
                "styleActiveLine": true,
                "autoCloseBrackets": true,
                "matchBrackets": true
            }
        },
        "script.js": {
            "mapping": "script",
            "initialCode": "var data = 0;",
            "cmOption": {
                "lineNumbers": true,
                "mode": "javascript",
                "theme": "cc",
                "lineWrapping": true,
                "styleActiveLine": true,
                "autoCloseBrackets": true,
                "matchBrackets": true
            }
        }
    },
    "template": "<!DOCTYPE html><html><head><style>{{{style}}}</style><body>{{{body}}}<script>{{{script}}}</script></body>",
