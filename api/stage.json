{
    "title": "Some Training Element",
    "files": {
        "index.html": {
            "mapping": "body",
            "initialCode": "<h1>\nHeader\n</h1>",
            "cmOption": {
                "lineNumbers": true,
                "mode": "text/html",
                "theme": "cc",
                "lineWrapping": true,
                "styleActiveLine": true,
                "autoCloseTags": true,
                "matchTags": {
                    "bothTags": true
                },
                "matchBrackets": true
            }
        },
        "style.css": {
            "mapping": "style",
            "initialCode": "body {\nbackground-color: white;\n}",
            "cmOption": {
                "lineNumbers": true,
                "mode": "text/css",
                "theme": "cc",
                "lineWrapping": true,
                "styleActiveLine": true,
                "autoCloseBrackets": true,
                "matchBrackets": true
            }
        },
        "script.js": {
            "mapping": "script",
            "initialCode": "var data = 0;",
            "cmOption": {
                "lineNumbers": true,
                "mode": "javascript",
                "theme": "cc",
                "lineWrapping": true,
                "styleActiveLine": true,
                "autoCloseBrackets": true,
                "matchBrackets": true
            }
        }
    },
    "template": "<!DOCTYPE html><html><head><script src='http://libs.useso.com/js/jquery/2.1.1/jquery.js'></script><style>{{{style}}}</style><body>{{{body}}}<script>{{{script}}}</script></body>",
    "description": "The following are a few tasks for you to try.",
    "tasks": [{
        "id": 1,
        "title": "Add a level 1 header",
        "content": "Add a level 1 header with text <code>Header</code>",
        "checker": "function checker() {return $('h1').html().trim() == 'Header'} checker();",
        "errorMsg": "Did you add a level 1 header with text <code>Header</code>?",
        "state": "next"
    }, {
        "id": 2,
        "title": "Add a level 2 header",
        "content": "Add a level 2 header with text <code>Header</code>",
        "checker": "function checker() {return $('h2').html().trim() == 'Header'} checker();",
        "state": "future",
        "errorMsg": "Did you add a level 2 header with text <code>Header</code>?"
    }, {
        "id": 3,
        "title": "Add a level 3 header",
        "content": "Add a level 3 header with text <code>Header</code>",
        "checker": "function checker() {return $('h3').html().trim() == 'Header'} checker();",
        "state": "future",
        "errorMsg": "Did you add a level 3 header with text <code>Header</code>?"
    }]
}
